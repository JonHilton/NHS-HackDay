@model NHS_HackDay.Web.Models.SearchResultsViewModel

@{
  ViewBag.Title = "Search Results";
}

<h2>Search Results for @Model.SearchedValue</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Extension</th>
      <th>Department</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Results)
    {
      <tr>
        <td>@item.Name</td>
        <td>@item.Id</td>
        <td>@item.Department</td>
      </tr>
    }
  </tbody>
</table>
